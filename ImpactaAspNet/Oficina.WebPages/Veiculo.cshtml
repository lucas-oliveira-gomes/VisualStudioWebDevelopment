@using Oficina.WebPages;

@{
    var veiculoAplicacao = new VeiculoAplicacao();
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro de Veículo</title>


    <style>
        body {
            font-size: 16px;
            font-family: 'Ubuntu', sans-serif;
        }

        label {
            min-width: 100px;
            display: inline-block;
        }

        input, select, button {
            min-width: 200px;
            min-height: 24px;
            margin-bottom: 5px;
        }

        input[type=submit] {
            width: 300px;
        }

        #mensagemErro{
            height: 40px;
            background-color: #dc3545;
            margin-bottom: 10px;
            color: white;
            text-align: center;
            vertical-align: middle;
            line-height: 40px;
        }
    </style>
</head>
<body>
    @if (IsPost)
    {
        try
        {
            veiculoAplicacao.Inserir();
            Response.Redirect("Veiculo");
        }
        catch
        {
            <div id="mensagemErro">@HttpContext.Current.Items["MensagemErro"]</div>
        }
    }

    <h1>Cadastro de Veículo</h1>
    <hr />
    <form action="" method="post">

        <label for="marca">Marca</label>
        <select name="marca" onchange="obterModelos(this.value)">
            <option value="">Selecione</option>
            @{
                foreach (var marca in veiculoAplicacao.Marcas)
                {
                    <option value="@marca.Id" selected="@Convert.ToBoolean(marca.Id.ToString() == veiculoAplicacao.MarcaSelecionada)">@marca.Nome</option>
                }
            }
        </select>

        <br />

        <label for="modelos">Modelos</label>
        <select name="modelo">
            <option value="">Selecione</option>
            @{
                foreach (var modelo in veiculoAplicacao.Modelos)
                {
                    <option value="@modelo.Id"  selected="@Convert.ToBoolean(modelo.Id.ToString() == veiculoAplicacao.MarcaSelecionada)">@modelo.Nome</option>
                }
            }
        </select>

        <br />

        <label for="placa">Placa</label>
        <input type="text" name="placa" value="@Request.Form["placa"]" maxlength="7" />

        <br />

        <label for="ano">Ano</label>
        <input id="ano" type="text" name="ano" value="@Request.Form["ano"]" maxlength="4" />

        <br />

        <label for="cor">Cor</label>
        <select name="cor">
            <option value="">Selecione</option>
            @{
                foreach (var cor in veiculoAplicacao.Cores)
                {
                    <option value="@cor.Id" selected="@Convert.ToBoolean(cor.Id.ToString() == Request.Form["cor"])" >@cor.Nome</option>
                }
            }
        </select>

        <br />

        <label for="combustivel">Combustivel</label>
        <select name="combustivel">
            <option value="">Selecione</option>
            @{
                foreach (var combustivel in veiculoAplicacao.Combustiveis)
                {
                    <option value="@((int)combustivel)"  selected="@Convert.ToBoolean(((int)combustivel).ToString() == Request.Form["combustivel"])" >@combustivel</option>
                }
            }
        </select>

        <br />

        <label for="cambio">Cambios</label>
        <select name="cambio">
            <option value="">Selecione</option>
            @{
                foreach (var cambio in veiculoAplicacao.Cambios)
                {
                    <option value="@((int)cambio)" selected="@Convert.ToBoolean(((int)cambio).ToString() == Request.Form["cambio"] )"> @cambio </option>
                }
            }
        </select>

        <br />

        <label for="observacao">Observação</label>
        <br />
        <textarea name="observacao" rows="10" cols="40"></textarea>

        <br />

        <input type="submit" value="Gravar" />
    </form>

    <script type="text/javascript">
        function obterModelos(marcaId) {
            const nomePagina = document.location.pathname;

            document.location.href = nomePagina + "?marcaId=" + marcaId;
        }
    </script>
</body>

</html>
